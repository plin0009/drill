{
  "name": "drill",
  "version": "0.0.1",
  "description": "Turn boring textbooks into fun and interactive games.",
  "main": "server.js",
  "scripts": {
    "clean": "rimraf dev_client .cache docs",
    "dev-client": "parcel src/*.html -d dev_client",
    "dev-server": "nodemon server.js --ignore src/ --ignore docs --ignore .cache --ignore dev_client",
    "dev": "concurrently -i -n c,s -c \"cyan.bold,magenta.bold\" npm:dev-client npm:dev-server",
    "build": "parcel build src/*.html -d docs --public-url ./"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plin0009/drill.git"
  },
  "author": "Peter Lin <plin0009@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/plin0009/drill/issues"
  },
  "homepage": "https://github.com/plin0009/drill#readme",
  "dependencies": {
    "@google-cloud/language": "^3.2.6",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "bulma": "^0.7.5",
    "concurrently": "^4.1.2",
    "nodemon": "^1.19.2",
    "parcel-bundler": "^1.12.3",
    "rimraf": "^3.0.0",
    "sass": "^1.22.12"
  }
}
